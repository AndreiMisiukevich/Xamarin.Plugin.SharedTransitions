<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TransitionApp.Views.MainPage"
             xmlns:prism="clr-namespace:Prism.Navigation.Xaml;assembly=Prism.Forms"
             Title="Main Menu">

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Spacing="20">
        <Label Text="Welcome to the Shared Transition Sample App!" Margin="0,0,0,10" />

        <Button Text="Simple transition with images"  Command="{prism:NavigateTo 'ImageSampleFrom'}" />
        <Button Text="Simple transition with layouts" Command="{prism:NavigateTo 'LayoutSampleFrom'}" />
        <Button Text="Dynamic transition (listview)"  Command="{prism:NavigateTo 'DynamicSampleFrom'}" />
        <Button Text="Dynamic transition pretty"  Command="{prism:NavigateTo 'DynamicSampleFrom2'}" />
    </StackLayout>

</ContentPage>