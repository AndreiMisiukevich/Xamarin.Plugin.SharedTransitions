<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sharedTransitions="clr-namespace:Plugin.SharedTransitions;assembly=Plugin.SharedTransitions"
             x:Class="TransitionApp.Page2"
             BackgroundColor="Blue" 
             Title="Second Page">

<Grid>
    <Frame sharedTransitions:Transition.Name="test1" CornerRadius="20"  BackgroundColor="Yellow" />
    <StackLayout>
        <StackLayout VerticalOptions="Start" HorizontalOptions="Center">
            <StackLayout.GestureRecognizers>
                <TapGestureRecognizer Tapped="ImageTapped"/>
            </StackLayout.GestureRecognizers>


            <Image Source="mydog.jpg" sharedTransitions:Transition.Name="test2" HeightRequest="200" WidthRequest="100" Aspect="Fill" HorizontalOptions="Center" VerticalOptions="Start"/>
            <Image Source="mydog.jpg" sharedTransitions:Transition.Name="test3" HorizontalOptions="Center" VerticalOptions="Start" />
            <Button Text=" Button " sharedTransitions:Transition.Name="test4" BackgroundColor="Aqua"  Clicked="Button_OnClicked"/>
        </StackLayout>
    </StackLayout>

</Grid>

    
</ContentPage>