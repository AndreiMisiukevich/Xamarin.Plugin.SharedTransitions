<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sharedTransitions="clr-namespace:Plugin.SharedTransitions;assembly=Plugin.SharedTransitions"
             x:Class="TransitionApp.Page1"
             BackgroundColor="Red" 
             Title="First Page">

        <StackLayout Orientation="Horizontal" VerticalOptions="Start">
            <StackLayout.GestureRecognizers>
                <TapGestureRecognizer Tapped="ImageTapped"/>
            </StackLayout.GestureRecognizers>
            
            
            <Frame sharedTransitions:Transition.Name="test1" WidthRequest="50" CornerRadius="0" BackgroundColor="Yellow"  />
            <Image Source="mydog.jpg"  sharedTransitions:Transition.Name="test2" HeightRequest="50" />
            
            
            <Image Source="mydog.jpg" sharedTransitions:Transition.Name="test3" WidthRequest="100" HeightRequest="100" Aspect="AspectFit"  />
            <Button Text="Button"  sharedTransitions:Transition.Name="test4" BackgroundColor="Aqua" HeightRequest="50" VerticalOptions="Center"/>
        </StackLayout>

</ContentPage>