<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sharedTransitions="clr-namespace:Plugin.SharedTransitions;assembly=Plugin.SharedTransitions"
             x:Class="TransitionApp.Page1"
             BackgroundColor="Red" 
             Title="First Page">

        <StackLayout Orientation="Horizontal" VerticalOptions="Start">
            <StackLayout.GestureRecognizers>
                <TapGestureRecognizer Tapped="ImageTapped"/>
            </StackLayout.GestureRecognizers>
            
            
            <Frame sharedTransitions:Transition.Tag="1" WidthRequest="50" CornerRadius="0" sharedTransitions:Transition.TagGroup="1" BackgroundColor="Yellow"  />
            <Image Source="mydog.jpg"  sharedTransitions:Transition.Tag="2" sharedTransitions:Transition.TagGroup="1"  HeightRequest="50" />
            
            
            <Image Source="mydog.jpg"  sharedTransitions:Transition.Tag="3" sharedTransitions:Transition.TagGroup="1" WidthRequest="100" HeightRequest="100" Aspect="AspectFit"  />
            <Button Text=" Button "  sharedTransitions:Transition.Tag="4" sharedTransitions:Transition.TagGroup="1" BackgroundColor="Aqua" HeightRequest="50" VerticalOptions="Center"/>
        </StackLayout>

</ContentPage>